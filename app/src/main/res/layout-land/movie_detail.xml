<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260sp"
                android:layout_weight="1"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="0dp"
                    android:layout_height="260sp"
                    android:layout_weight="6"
                    android:contentDescription="@string/MoviePoster" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        style="@style/MagentaWhite"
                        android:layout_width="150sp"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lines="4"
                        android:maxLines="4"
                        android:padding="1sp"
                        android:singleLine="false"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/vote_average"
                        style="@style/MagentaWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="1sp"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/releaseDate"
                        style="@style/MagentaWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lines="4"
                        android:maxLines="4"
                        android:padding="1sp"
                        android:singleLine="false"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="258sp"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/synopsis"
                        style="@style/MagentaWhite"
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:gravity="bottom"
                        android:maxLines="100"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textSize="20sp"
                        android:verticalScrollbarPosition="right" />

                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/listView1"
                        style="@style/MagentaWhite"
                        android:padding="5dp"
                        />
                </ScrollView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp">

        <Button
            android:id="@+id/mReview"
            style="@style/MagentaWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ReadReviews" />

        <Button
            android:id="@+id/mVideos"
            style="@style/MagentaWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ViewVideos" />

        <Button
            android:id="@+id/favButton"
            style="@style/MagentaWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/SetFavourite" />

        <Button
            android:id="@+id/similarButton"
            style="@style/MagentaWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Similar" />

    </LinearLayout>

</LinearLayout>